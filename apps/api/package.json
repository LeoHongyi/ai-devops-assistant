    "nats": "^2.23.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "tsx": "^4.19.2",
    "typescript": "^5.4.5",
    "prisma": "^5.22.0",
    "vitest": "^2.1.4",
    "supertest": "^6.3.4",
    "@types/supertest": "^2.0.16"
  }
