{
  "name": "ai-devops-assistant",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "turbo format",
    "dev:infra": "docker compose -f infra/docker-compose.yml up -d",
    "down:infra": "docker compose -f infra/docker-compose.yml down",
    "dev:all": "pnpm dev:infra && turbo dev",
    "db:migrate": "pnpm -C packages/db prisma migrate dev",
    "db:generate": "pnpm -C packages/db prisma generate",
    "db:studio": "pnpm -C packages/db prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
