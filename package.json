{
  "name": "ai-devops-assistant",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "turbo format",
    "dev:infra": "docker compose -f infra/docker-compose.yml up -d",
    "down:infra": "docker compose -f infra/docker-compose.yml down",
    "dev:all": "pnpm dev:infra && turbo dev",
    "db:migrate": "pnpm -C packages/db run migrate",
    "db:generate": "pnpm -C packages/db run generate",
    "db:studio": "pnpm -C packages/db run studio",
    "dev:full": "pnpm dev:infra && pnpm dev:full:all",
    "dev:full:worker": "pnpm -C apps/api worker",
    "dev:full:all": "concurrently -k -n api,worker \"pnpm -C apps/api dev\" \"pnpm -C apps/api worker\"",
    "dev:tmux": "tmux new-session -d -s aidda \"pnpm -C apps/api dev\" \\; split-window -h \"pnpm -C apps/api worker\" \\; select-layout even-horizontal \\; attach"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "turbo": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
